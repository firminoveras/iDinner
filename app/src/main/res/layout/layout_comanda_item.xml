<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="28dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/Comanda_Item_Count"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fontFamily="monospace"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="0dp"
        android:text="5"
        android:textColor="@color/comanda_text"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/Comanda_Item_Title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:fontFamily="monospace"
        android:gravity="center_vertical"
        android:text="X-FranBacon"
        android:textColor="@color/comanda_text"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/Comanda_Item_UnityPrice"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:fontFamily="monospace"
        android:gravity="center_vertical|end"
        android:text="R$ 32,50"
        android:textColor="@color/comanda_text"
        android:textSize="11sp" />
    <TextView
        android:id="@+id/Comanda_Item_TotalPrice"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:fontFamily="monospace"
        android:gravity="center_vertical|end"
        android:paddingStart="0dp"
        android:paddingEnd="12dp"
        android:text="R$ 32,50"
        android:textColor="@color/comanda_text"
        android:textSize="11sp" />

</LinearLayout>