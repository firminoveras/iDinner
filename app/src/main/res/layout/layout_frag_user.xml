<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:ignore="ContentDescription">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_viewpager"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/informa_es_do_cliente"
            android:textAlignment="center"
            android:textColor="@color/bg_orange"
            android:textSize="24sp"
            app:drawableTopCompat="@drawable/ic_client" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="32dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:background="@color/bg_orange" />

        <EditText
            android:id="@+id/Frag_User_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:autofillHints="true"
            android:backgroundTint="@color/bg_orange"
            android:drawableStart="@drawable/ic_name"
            android:drawablePadding="12dp"
            android:fontFamily="sans-serif-light"
            android:hint="@string/nome"
            android:inputType="textPersonName"
            android:lines="1"
            android:maxLength="32"
            android:textColor="@color/bg_orange"
            android:textColorHint="#8F8F8F"
            android:textSize="18sp" />

        <CalendarView
            android:id="@+id/Frag_User_Calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_viewpager"
            android:backgroundTint="@color/bg_orange" />

        <EditText
            android:id="@+id/Frag_User_Birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:autofillHints="true"
            android:backgroundTint="@color/bg_orange"
            android:drawableStart="@drawable/ic_calendario"
            android:drawablePadding="12dp"
            android:fontFamily="sans-serif-light"
            android:hint="@string/data_de_nascimento"
            android:inputType="date"
            android:lines="1"
            android:maxLength="32"
            android:textColor="@color/bg_orange"
            android:textColorHint="#8F8F8F"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/Frag_User_Genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:autofillHints="false"
            android:backgroundTint="@color/bg_orange"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="12dp"
            android:fontFamily="sans-serif-light"
            android:hint="@string/g_nero"
            android:inputType="text"
            android:lines="1"
            android:maxLength="32"
            android:textColor="@color/bg_orange"
            android:textColorHint="#8F8F8F"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/Frag_User_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:autofillHints="false"
            android:backgroundTint="@color/bg_orange"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="12dp"
            android:fontFamily="sans-serif-light"
            android:hint="@string/e_mail"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:maxLength="32"
            android:textColor="@color/bg_orange"
            android:textColorHint="#8F8F8F"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/Frag_User_Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:autofillHints="false"
            android:backgroundTint="@color/bg_orange"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="12dp"
            android:fontFamily="sans-serif-light"
            android:hint="@string/telefone"
            android:inputType="phone"
            android:lines="1"
            android:maxLength="32"
            android:textColor="@color/bg_orange"
            android:textColorHint="#8F8F8F"
            android:textSize="18sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/Frag_User_NextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="48dp"
                android:background="@drawable/bg_button_orange"
                android:drawableEnd="@drawable/ic_next"
                android:fontFamily="sans-serif-black"
                android:paddingStart="44dp"
                android:paddingEnd="18dp"
                android:text="@string/pr_ximo"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </FrameLayout>
    </LinearLayout>


</FrameLayout>